source 'https://rubygems.org'

# web serverb
gem 'puma'
gem 'rack'
# db
gem 'sqlite3'
# orm
gem 'sequel'
# debugging
gem 'pry'
gem 'json'
# auth
gem 'jwt'

group :test do
  # testing framework
  gem "minitest"
  gem "rack-test"
end

group :development do
  # code reloading
  gem "rerun"
  # linting
  gem 'rubocop', require: false
end
