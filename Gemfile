source 'https://rubygems.org'

ruby '3.4.1'

# web server
gem 'puma'
gem 'rack'
gem 'rackup'
# db
gem 'sqlite3'
# gem 'pg'
# orm
gem 'sequel'
# debugging
gem 'json'
gem 'pry'
gem 'pry-byebug'
# auth
gem 'jwt'
# console
gem 'irb'
# openstruct
gem 'ostruct'
# documentation
gem 'rdoc'

group :test do
  # testing framework
  gem 'minitest'
  gem 'rack-test'
end

group :development do
  # code reloading
  gem 'rerun'
  # linting
  gem 'rubocop', require: false
end
