source 'https://rubygems.org'

ruby '3.4.1'

# web server
gem 'puma'
gem 'rack'
gem 'rackup'
# db
gem 'sqlite3'
# gem 'pg'
# orm
gem 'sequel'
# debugging
gem 'pry'
gem 'pry-byebug'
gem 'json'
# auth
gem 'jwt'
# console
gem 'irb'
# openstruct
gem 'ostruct'
# documentation
gem 'rdoc'
# file utils
gem 'fileutils'
# date
gem 'date'
# WebSocket
gem 'websocket'

group :test do
  # testing framework
  gem "minitest"
  gem "rack-test"
  gem 'simplecov', require: false
end

group :development do
  # code reloading
  gem "rerun"
  # linting
  gem 'rubocop', require: false
end
